<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.18/vue.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="app">

    <input v-on:click="getList" type="button" value="Get List" />
    <table id="myTable" class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">#</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            <tr id="info1" v-for="item in rooms" v-if="item !== null">
                <td class="id"> {{item.Name}}</td>
                <td class="name"> {{item.Id}}</td>
                <td>
                    <button class="btnSelect">Select</button>
                </td>
            </tr>
        </tbody>

    </table>
    <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">Small</span>
        </div>
        <input id="id1" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
    </div>
    <div class="input-group input-group-sm mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-sm">Small</span>
        </div>
        <input id="id2" type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
    </div>
    Room name: <input v-model="Room" type="text" value="" />
    <input v-on:click="insertRoom" type="button" value="Insert Room" />
</div>

<script>

    var stObject = {};

    var app = new Vue({
        el: '#app',
        data: {
            Room: '',
            rooms: []
        },
        methods: {
            getList() {
                axios
                    .get('/api/chess/getrooms')
                    .then(response => {
                        this.rooms = response.data.data;
                        console.log(this.rooms)
                    })
                    .catch(error => {
                        console.log(error)
                    })
                    .finally()
            },
            insertRoom() {
                var payload = { RoomName: this.Room };
                var res = axios.post('/api/chess/insertroom', payload);
                if (console.log(res.data) != null) {
                    this.flashMessage.success({ title: 'Success Message Title', message: 'Success!' });
                }
            },
        }
    });
    $(document).ready(function () {

        $("#myTable").on('click', '.btnSelect', function () {

            var currentRow = $(this).closest("tr");

            var col1 = currentRow.find("td:eq(0)").html();
            var col2 = currentRow.find("td:eq(1)").html();
            localStorage.wesite = col2;

            $("#id1").val(col1);
            $("#id2").val(col2);
            document.location = '@Url.Action("Index","Home")';
        });
    });

</script>

